# Copy this to config/ai-beast.env and customize
# Then source it or load via bin/beast

export AI_BEAST_BIND_ADDR="127.0.0.1"
export AI_BEAST_VERBOSE="0"
export AI_BEAST_DRYRUN_DEFAULT="1"

# Docker runtime selector (auto|colima|docker_desktop)
# - auto: prefer Colima if available, otherwise Docker Desktop
# - colima: use Colima VM (brew install colima docker docker-compose)
# - docker_desktop: use Docker Desktop app
export DOCKER_RUNTIME="colima"

# Docker Compose project name (used for drift + minimal reconcile)
export COMPOSE_PROJECT_NAME="ai_beast"

# Jupyter (code runner) token
export AI_BEAST_JUPYTER_TOKEN="ai-beast"

# Agent settings
export AI_BEAST_AGENT_MODEL="${FEATURE_AGENT_MODEL_DEFAULT:-llama3.2:latest}"
export AI_BEAST_OLLAMA="http://127.0.0.1:11434"

# Logging
export LOG_LEVEL="INFO"

# Security
export TRUST_MODE="enforce"  # enforce|warn|off

# Feature flags (can be overridden here)
# export FEATURE_DOCKER_QDRANT=1
# export FEATURE_NATIVE_OLLAMA=1
