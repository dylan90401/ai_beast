# Paths (edit or run: ./bin/beast init --apply)
# NOTE: BASE_DIR should match the **project root** (guts). Wizard sets this automatically.

export BASE_DIR="$HOME/AI_Beast/ai_beast/"   # typically the repo root on internal disk

# Guts (native installs) â€” keep on internal SSD for speed
export GUTS_DIR="$BASE_DIR"

# Heavy roots (recommend external SSD)
export HEAVY_DIR="$BASE_DIR"       # set to /Volumes/<External>/AI_Beast_Heavy if desired

export MODELS_DIR="$HEAVY_DIR/models"
export DATA_DIR="$HEAVY_DIR/data"
export OUTPUTS_DIR="$HEAVY_DIR/outputs"
export CACHE_DIR="$HEAVY_DIR/cache"
export BACKUP_DIR="$HEAVY_DIR/backups"
export LOG_DIR="$HEAVY_DIR/logs"

# Optional subroots
export COMFYUI_MODELS_DIR="$MODELS_DIR/comfyui"
export LLM_MODELS_DIR="$MODELS_DIR/llm"

# Native guts locations
export COMFYUI_DIR="$GUTS_DIR/apps/comfyui/ComfyUI"
export VENV_DIR="$GUTS_DIR/.venv"